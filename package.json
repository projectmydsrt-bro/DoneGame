{
  "name": "donegame",
  "version": "1.0.0",
  "description": "DSRT DoneGame - Auto CDN uploader, metadata, and playable game repo manager",
  "author": "projectmydsrt-bro",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "node scripts/upload_cdn.js",
    "upload:cdn": "node scripts/upload_cdn.js",
    "generate:thumb": "node scripts/generate_thumbnails.js",
    "check:cdn": "node scripts/check_cdn.js",
    "post-commit": "node scripts/post_commit_upload.js"
  },
  "dependencies": {
    "basic-ftp": "^5.0.4",
    "dotenv": "^16.4.5",
    "puppeteer": "^23.3.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "husky": "^9.1.0"
  },
  "gitHooks": {
    "post-commit": "npm run upload:cdn"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "script": "scripts",
    "game": "game",
    "thumbnail": "thumbnails",
    "metadata": "metadata"
  },
  "config": {
    "cdn_url": "https://www.dsrt-artweb.online/game_thumbnails",
    "thumbnail_width": "640",
    "thumbnail_height": "360"
  },
  "keywords": [
    "DSRT",
    "DoneGame",
    "cdn-uploader",
    "game-playable",
    "auto-sync",
    "puppeteer-thumbnail",
    "basic-ftp"
  ]
}
